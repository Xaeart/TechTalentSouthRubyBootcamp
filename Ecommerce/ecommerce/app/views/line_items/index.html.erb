<p id="notice"><%= notice %></p>

<h1>Line Items</h1>

<table class= "table">
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Line item total</th>
      <th>Order</th>
      <th>Product Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.product.name %></td>
        <td><%= line_item.product.price %></td>
        <td><%= line_item.quantity %></td>
        <td><%= line_item.line_item_total %></td>
        <td><%= line_item.order_id %></td>
        <td><%= link_to 'Show', line_item %></td>
        <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
        <td><%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

